{
  "$parameters": {
    "NAME": { "required": true },
    "TAG": { "required": true},
    "PUBLIC": { "required": true },
    "NUM_INSTANCES": { "default": 1 },
    "INSTANCE_TYPE": { "default": "t2.micro" }
  },

  "type": "service",
  "name": "${NAME}",

  "components": [
    {
      "name": "service",
      "ports": [
        {
          "name": "http",
          "port": 8080,
          "protocol": "HTTP",
          "external_access": {
            "public": "${PUBLIC}"
          }
        }
      ],
      "build": {
        "git_repository": {
          "url": "https://github.com/gregbanks/kvstore.git",
          "tag": "${TAG}"
        },
        "language": "node:boron",
        "command": "npm install"
      },
      "exec": {
        "command": [
          "node",
          "lib/index.js"
        ],
        "environment": {
          "BIND_PORT": "8080"
        }
      },
      "health_check": {
        "http": {
          "port": "http",
          "path": "/status"
        }
      }
    }
  ],
  "resources": {
    "num_instances": "${NUM_INSTANCES}",
    "instance_type": "${INSTANCE_TYPE}"
  },
  "subsystems": {
    "$include": {
      "url": "redis-service.json",
      "parameters": {
        "NAME": "redis",
        "TAG": "latest",
        "PUBLIC": "false"
      }
    }
  }
}
